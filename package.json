{
  "name": "fishing-map-migrations",
  "version": "1.0.0",
  "description": "Database migrations for FishingMap",
  "main": "dist/run-migrations.js",
  "scripts": {
    "build": "tsc",
    "migrate": "ts-node src/run-migrations.ts",
    "migrate:status": "ts-node src/run-migrations.ts --status",
    "migrate:undo": "ts-node src/run-migrations.ts --undo",
    "migrate:rollback": "ts-node src/run-migrations.ts --rollback",
    "migrate:rollback-steps": "ts-node src/run-migrations.ts --rollback-steps",
    "migrate:rollback-to": "ts-node src/run-migrations.ts --rollback-to",
    "migration:create": "ts-node src/create-migration.ts"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}

